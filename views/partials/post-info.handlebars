<article class="post">
    <div class="title">
        <a href="/dashboard/edit/{{post_url}}">{{title}}</a>
        <span>({{post_url}})</span>
    </div>
    <div class="meta">
        {{vote_count}} point(s) by {{user.username}} on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
    </div>
</article>